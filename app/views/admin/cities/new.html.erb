<div class="container">

  <div class="row">
    <%= form_with model: @city, local:true,url: '/admin/cities', method: :post do |f| %>


    <div class="form-group">
      <%= f.label :'市町村名' %>
      <%= f.text_field :name, class: "form-control name" %>
    </div>
    <div class="form-group">
      <%= f.label :'都道府県' %>
      <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, class: "form-control introduction" %>
    </div>
    <div class="form-group">
      <%= f.submit "登録", class: 'btn btn-secondary' %>
    </div>

    <% end %>

  </div>
</div>
