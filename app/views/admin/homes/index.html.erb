<div class="container">
  <div class="row">
     　<!--数一覧-->
     <div class="col-2">
       <p>ユーザー数：<%= @user.count %>名</p>
       <p>遊漁船登録数：<%= @ship.count %>艇</p>
       <p>総レビュー投稿数：<%= @review.count %>ページ</p>
       <p>総日記投稿数：<%= @post.count %>ページ</p>
     </div>
     
     <div class="col-10">
       <!--最新の投稿５件表示-->
     <div class="row">
         <h2>最新の投稿</h2>
         <table class="table table-bordered">
              <thead>
                 <tr>
                    <th scope="col" style="width: 20%">名前</th>
                    <th scope="col" style="width: 30%">投稿タイトル</th>
                    <th scope="col" style="width: 50%">内容</th>
                 </tr>
              </thead>
                       <% @post.reverse_each do |c| %>
              <tbody>
                <tr>
                  <td><%= c.user.name %></td>
                  <td><%= link_to public_post_path(c.id) do %>
                      <%= c.title %><% end %></td>
                  <td><%= c.body %></td>
                </tr>
              </tbody>
              <% end %>
          </table>
       </div>
       <!--直近のレビュー5件表示-->
     <div class="row">
         <h2>最新のレビュー</h2>
         <table class="table table-bordered">
              <thead>
                 <tr>
                    <th scope="col" style="width: 20%">ユーザーネーム</th>
                    <th scope="col" style="width: 30%">投稿タイトル</th>
                    <th scope="col" style="width: 50%">内容</th>
                 </tr>
              </thead>
                       <% @review.reverse_each do |c| %>
              <tbody>
                <tr>
                  <td><%= c.user.name %></td>
                  <td><%= link_to public_ship_reviews_path(c.id) do %>
                      <%= c.title %><% end %></td>
                  <td><%= c.body %></td>
                </tr>
              </tbody>
              <% end %>
          </table>
       </div>
       <!--直近の登録ユーザー-->
     <div class="row">
         <h2>最新の登録のユーザー</h2>
         <table class="table table-bordered">
              <thead>
                 <tr>
                    <th scope="col" style="width: 20%">会員id</th>
                    <th scope="col" style="width: 30%">ユーザー名</th>
                    <th scope="col" style="width: 50%">退会ステータス</th>
                 </tr>
              </thead>
                       <% @user.reverse_each do |c| %>
              <tbody>
                <tr>
                  <td><%= c.id %></td>
                  <td><%= link_to public_ship_reviews_path(c.id) do %>
                      <%= c.name %><% end %></td>
                  <td><%= c.is_deleted %></td>
                </tr>
              </tbody>
              <% end %>
          </table>
       </div>

     </div>
     
  </div>
</div>

