<div class='container'>
  <h2>投稿詳細</h2>
  <div class='row justify-content-center'>
    <div class='col-3 d-flex justify-content-center'>
     <% if @post.images.attached? %>
  <% @post.images.each do |image| %>
    <%= image_tag image.variant(resize: '200x200') %>
  <% end %>
<% end %>
     </div>
     <div class="col-1"></div>
     <div class="col-8 d-flex justify-content-center">
       <div class="row">
      <dt class="col-3">タイトル</dt>
      <dd class="col-9"><%= @post.title%></dd>
      <dt class="col-3">内容</dt>
      <dd class="col-9"><%= @post.body%></dd>
      
      
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
            <%= link_to "削除する", admin_post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-danger' %>
          </div>
</div>

