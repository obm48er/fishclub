<%= form_with model: [:admin,@ship] do |f| %>
    <div class="row">
    <%= f.label :'遊漁船名' %>
    <%= f.text_field :name, class: "form-control name" %>
    </div>
    <div class="row">
    <%= f.label :'遊漁船説明' %>
    <%= f.text_area :body, class: "form-control introduction" %>
    </div>
    
    <div class="row">
    <%= f.file_field :images, multiple: true, class: 'form-control',accept: 'image/*' %>  
    </div>
       <% if @ship.images.attached? %>
    <div class="row">
      <p>選択済みの画像（削除する画像にチェックをつけてください）</p>
      <div style="display: flex; flex-wrap: wrap; width: 750px;">
      <% @ship.images.each do |image| %>
      <div style="display: flex; margin:5px 5px 5px 0;">
      <%= f.check_box :image_ids, { multiple: true }, image.id, false %>
      <label for="ship_image_ids_<%= image.id %>" > 
      <%= image_tag image, size: '150x150' %>
      </label>
      </div>
      <% end %>
      </div>
      <% end %>
    </div>
      
      
  <!--<div class="form-group">-->
    <%#= f.label :'ジャンル' %>
      <!--<label><#%= f.collection_select(:genre_id, genres, :id, :name) %></label>-->
  <!--</div>-->
    <div class="row">
    <%= f.label :'電話番号' %>
    <%= f.text_field :phone_number,class: "form-control" %>
    </div>
    <div class=" row">
    <%= f.label :'市区町村' %>
    <%= f.collection_select(:city_id, @city, :id, :name) %>
    </div>
    <div class="row">
    <%= f.submit class: 'btn btn-secondary' %>
    </div>
    <% end %>