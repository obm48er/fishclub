<!DOCTYPE html>
<html>
  <head>
    <title>Fishclub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
  <nav class="navbar navbar-expand-lg", style="background-color:#afafb0;">
    <div class="container">
      <a class="navbar-brand" href="/"><span>釣りクラブ</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
        <ul class="navbar-nav my-2 my-md-0 mr-md-3">
        <% if user_signed_in? %>
          <li>
            <%= link_to "マイページ", public_users_path(current_user.id),class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "遊漁船一覧", public_ships_path,class: 'nav-link text-dark' %>
          </li>
          <li>
            <%=  link_to "釣果一覧",  public_ships_path,class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: 'nav-link text-dark' %>
          </li>
        <% elsif admin_signed_in? %>
           <li>
            <%= link_to "遊漁船一覧",admin_ship_path,class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "釣果一覧", admin_post_path,class: 'nav-link text-dark' %>
          </li>
          <li>
            <%=  link_to "ユーザー一覧", admin_user_path ,class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class: 'nav-link text-dark' %>
          </li>
          <% else %>
          <li>
            <%= link_to "About", public_homes_path,class: 'nav-link text-dark' %>

          </li>
          <li>
            <%= link_to "ユーザー一覧", public_ships_path,class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "漁船一覧", public_ships_path,class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "新規登録", new_user_registration_path,class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "ログイン", new_user_session_path ,class: 'nav-link text-dark' %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
<main>
  <%= yield %>
</main>
    
  </body>
</html>
