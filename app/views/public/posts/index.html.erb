<div class="container">
<h1 class="my-3 ml-3">投稿一覧</h1>
<div class="row">
<div class="col-12">
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col" style="width: 10%">会員ID</th>
      <th scope="col" style="width: 30%">氏名</th>
      <th scope="col" style="width: 40%">メールアドレス</th>
      <th scope="col" style="width: 20%">ステータス</th>
    </tr>
  </thead>
  <% @post.each do |c| %>
  <tbody>
    <tr>
      <td><%= c.id %></td>
      <td><%= link_to public_post_path(c.id) do %>
        <%= c.title %><% end %></td>
      <td><% if c.favorited_by?(current_user) %>
    <p>
      <%= link_to public_post_favorites_path(c), method: :delete do %>
        ♥<%= c.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to public_post_favorites_path(c), method: :post do %>
        ♡<%= c.favorites.count %> いいね
      <% end %>
    </p>
  <% end %></td>


    </tr>
  </tbody>
  <% end %>
</table>
<!--<div class="row justify-content-center"><#%= paginate @customers %></div>-->
</div>
</div>
</div>

