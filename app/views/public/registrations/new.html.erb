
<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>新規会員登録</h2>

      <%= form_with model: [:public,@user], url: user_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
     <div><%= render 'layouts/error_messages', model: f.object %></div> 
     <div class="form-group">
        <%= f.label :name,'ユーザー名' %>
        <%= f.text_field :name, class: 'form-control', placeholder: "ユーザー名" %>
      
      </div>
  
      <div class="form-group">
        <%= f.label :email,'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>
      
      </div>

      <div class="form-group">
        <%= f.label :password,'パスワード(6文字以上)' %>
        <%= f.password_field :password, class: 'form-control' %>
       
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation,'パスワード(確認用)' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      </div>
  
      <div class="actions">
        <%= f.submit "新規登録", class: 'm-3 btn btn-success d-grid gap-2 col-3' %>
      </div>
      
      <% end %>

      <h5>すでに登録お済みの方</h5>
      <p><%= link_to "こちら", new_user_session_path %> からログインしてください。</p>

    </div>
  </div>
</div>

