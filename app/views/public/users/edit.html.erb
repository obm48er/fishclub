<div class='container'>
  <div class='row'>
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>マイページ編集</h2>
      <%= form_with model: [:public,@user], url: public_user_path(@user), class: 'edit', local: true do |f| %>
      <div class="form-group">
        <%= f.label :name,'ユーザー名' %>
        <%= f.text_field :name, class: 'form-control', placeholder: "ユーザー名" %>
      </div>
      <div class="form-group">
        <%= f.label :Introduction,'自己紹介' %>
        <%= f.text_field :Introduction, class: 'form-control', placeholder: "30文字いない" %>
      </div>
      <div>
        <%= f.label :'プロフィール画像' %>
        <%= f.file_field :image,class: 'form-control',accept: 'image/*' %>
      </div>
      <div class="actions">
        <%= f.submit "更新", class: 'm-3 btn btn-success d-grid gap-2 col-3' %>
      </div>
      <% end %>
    </div>
  </div>
