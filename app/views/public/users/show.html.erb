<div class='container'>
  <div class='row '>
    <!--マイプロフィール-->
    <div class='col-3'>
      <%= render 'sideber' %>
    </div>
    <div class="col-9">
      <div class="row">
        <!--最新の投稿五件-->
        <div class="col-6">
          <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col" style="width: 20%">タイトル</th>
      <th scope="col" style="width: 10%">コメント数</th>
      <th scope="col" style="width: 10%">いいね数</th>
      <th scope="col" style="width: 10%">表示ステータス</th>
    </tr>
  </thead>
  <% @post.each do |c| %>
  <tbody>
    <tr>

      <td><%= link_to public_post_path(c.id) do %>
        <%= c.title %><% end %></td>
      <td><%= c.favorites.count %></td>
      <td><%= c.favorites.count %></td>


    </tr>
  </tbody>
  <% end %>
</table>
        </div>
        <!--最新のコメント-->
        <div class="col-6">
           <table class="table table-bordered">
                <thead>
                  <tr>
                    <th scope="col" style="width: 30%">コメント</th>
                    <th scope="col" style="width: 30%">タイトル</th>
                    <th scope="col" style="width: 20%">ユーザー</th>
                    <th scope="col" style="width: 20%">投稿日</th>
                  </tr>
                </thead>
                           <% @comment.each do |c| %>
                <tbody>
                   <tr>

                       <td><%= link_to public_post_post_comment_path(c.id) do %>
                           <%= truncate(c.comment,length:30) %><% end %></td>



                   </tr>
                </tbody>
                           <% end %>
          </table>
      </div>
      </div>
      <% @posts.each do |c| %>
      <div class="row">

      <td><%= c.user.name %></td>
      <td><%= c.title %></td>
       <td><%= c.body %></td>
       <td><%= c.post_comments.count %></td>
       <td><%= c.favorites.count %></td>

      </div>
      <% end %>
    </div>
  </div>
</div>

    </div>
  </div>
  <div class="d-flex justify-content-center">
            <%= link_to '編集する', edit_public_user_path(@user), class: "btn btn-sm btn-success edit_book_#{@user.id}" %>
            <%= link_to "削除する", public_user_path(@user), method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-danger' %>
          </div>
</div>
