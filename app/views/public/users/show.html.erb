<% if @user == current_user %>

      <div class='container'>
        <div class='row '>
          <!--マイプロフィール-->
          <div class='col-3'>
            <%= render 'sideber' %>
          </div>
          <div class="col-9">
            <div class="row">
              <!--最新の投稿五件-->
              <div class="col-6">
                <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th scope="col" style="width: 20%">タイトル</th>
                        <th scope="col" style="width: 10%">コメント数</th>
                        <th scope="col" style="width: 10%">いいね数</th>
                        <th scope="col" style="width: 10%"></th>
                      </tr>
                    </thead>
                      <% @post.each do |c| %>
                      <tbody>
                        <tr>

                          <td><%= link_to public_post_path(c.id) do %>
                            <%= c.title %><% end %></td>
                          <td><%= c.favorites.count %></td>
                          <td><%= c.favorites.count %></td>
                                    <%if c.is_deleted == true %>
                                      <td class="text-secondary">非公開</td>
                                    <% else %>
                                      <td class="text-success">公開</td>
                                    <% end %>


                        </tr>
                      </tbody>
                      <% end %>
                    </table>
              </div>
              <!--最新のコメント-->
              <div class="col-6">
                 <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th scope="col" style="width: 30%">コメント</th>
                          <th scope="col" style="width: 30%">タイトル</th>
                          <th scope="col" style="width: 20%">ユーザー</th>
                          <th scope="col" style="width: 20%">投稿日</th>
                        </tr>
                      </thead>
                                 <% @comment.each do |c| %>
                      <tbody>
                         <tr>
                             <td><%= link_to public_post_post_comment_path(c.id) do %>
                                 <%= truncate(c.comment,length:30) %><% end %></td>
                         </tr>
                      </tbody>
                                 <% end %>
                </table>
            </div>
            </div>
            <% @posts.each do |c| %>
              <div class="row">

                 <td><%= c.user.name %></td>
                 <td><%= c.title %></td>
                 <td><%= c.body %></td>
                 <td><%= c.post_comments.count %></td>
                 <td><%= c.favorites.count %></td>

              </div>
            <% end %>
          </div>
        </div>
      </div>
<% else %>
  <div class='container'>
        <div class='row '>
          <div class='col-3'>
             <h3>プロフィール</h1>
                  <div class="d-flex justify-content">
                  <div>
                      <% if @user.image.attached? %>
                      <%= image_tag @user.image.variant(resize: '100x100') %>
                      <% end %>
                  </div>
                  <div>
                      紹介:<br><%= @user.Introduction %>
                  </div>
                  </div>

                  <table class="side_table">
                     <tr>
                        <th>ユーザー名</th>
                        <td><%= @user.name %></td>

          　          </tr>
                     <tr>

                        <th><%= link_to "フォロー",public_user_followings_path(@user)%></th>
                        <td><%= @user.followings.count %></td>

          　          </tr>
                     <tr>
                        <th><%= link_to "フォロワー",public_user_followers_path(@user)%></th>
                        <td><%= @user.followers.count %></td>
                     </tr>

                  </table>
                </div>
          <div class="col-9">
            <div class="row">
              <% @user.posts.each do |c| %>
                 <div class="box5">
                      <div>
                      <%= link_to public_post_path(c) do %><%= c.title %><% end %>
                      </div>
                      <% if c.images.attached? %>
                      <div>
                            <% c.images.each do |image| %>
                            <%= image_tag image.variant(resize: '100x100') %>
                            <% end %>
                      </div>
                      <% end %>
                      <div><%= c.body %></div>
                      <div><% if user_signed_in? %>
                                   <% if c.favorited_by?(current_user) %>
                                      <p><%= link_to public_post_favorites_path(c), method: :delete do %>♥<%= c.favorites.count %>いいね<% end %></p>
                                   <% else %>
                                      <p><%= link_to public_post_favorites_path(c), method: :post do %>♡<%= c.favorites.count %> いいね<% end %></p>
                                   <% end %>
                            <% else %>
                                      <p><%= c.favorites.count %></p>

                            <% end %>
                      </div>
                    </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>

<% end %>
